{% extends 'base.jinja' %}

{% block content %}
  <h1>{{ name }}</h1>

  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link{{ '' if man_variant_uri else ' disabled' }}" href="{{ man_variant_uri or '#' }}">
        Man Page
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="#">Help Output</a>
    </li>
  </ul>

  <div>
    <h2>Help Command</h2>
    <p class="lead">
      {{ description }}
    </p>
    <p>
      <b>Note:</b> help and version output are generated by a very dumb script which tries a few variants of
      <code>&lt;command&gt; --help</code>, <code>&lt;command&gt; -h</code> etc.,
      sometimes it gets lucky, <b>sometimes it doesn't</b>.
    </p>

    {% if version_msg %}
    <section id="man-comments" class="terminal-like">
      <h3>{{ name }} {{ version_arg }} (return code: {{ version_returncode }})</h3>

      <div class="white-space">{{ version_msg }}</div>
    </section>
    {% endif %}
    <section id="man-page" class="terminal-like">
      <h3>{{ name }} {{ help_arg }} (return code: {{ help_returncode }})</h3>

      <div class="white-space">{{ help_msg }}</div>
    </section>
  </div>
{% endblock %}
